{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "paths": {
      "@shared/*": ["src/*"],
      "*": ["./node_modules/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  }
}
