{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "paths": {
      "@root/*": ["src/js/*"],
      "@shared/*": ["../shared/src/*"],
      "*": ["./node_modules/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  }
}
